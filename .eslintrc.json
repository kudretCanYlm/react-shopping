{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "parser": "@babel/eslint-parser",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "allowImportExportEverywhere": false,
        "ecmaVersion": "latest",
        "sourceType": "module",
        "babelOptions": {
            "babelrc": false,
            "configFile": false,
            // your babel options
            "presets": [
                "@babel/preset-env"
            ]
        }
    },
    "plugins": [
        "react",
        "@babel"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off"
    }
}