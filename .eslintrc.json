{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "parser": "@babel/eslint-parser",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "allowImportExportEverywhere": false,
        "ecmaVersion": "latest",
        "sourceType": "module",
        "babelOptions": {
            "babelrc": true,
            "configFile": true,
            "presets": [
                "@babel/preset-react"
            ]
        }
    },
    "settings": {
        "import/resolver": {
            "babel-module": {
                "allowExistingDirectories": true
            }
        }
    },
    "plugins": [
        "react",
        "@babel"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off"
    }
}